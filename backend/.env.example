# Backend Environment Variables
# Copy this file to .env and update with your values

# Database connection string
# Local development (with Docker Compose):
DATABASE_URL=postgresql://redbeard:your-password@localhost:5432/redbeard_calendar
# OR Supabase (free tier):
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres

# Admin password for updating calendar status (min 8 characters)
ADMIN_PASSWORD=your-secure-admin-password

# Server port
PORT=8080

# Environment (development | production | test)
NODE_ENV=development

# Frontend URL for CORS (used in production)
# Local development: http://localhost:3000 (default)
# Production: https://your-domain.vercel.app or https://your-custom-domain.com
FRONTEND_URL=http://localhost:3000